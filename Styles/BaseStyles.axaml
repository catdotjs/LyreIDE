<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Window">
        <Setter Property="FontFamily" Value="{StaticResource CodeNewRoman}"/>
    </Style>
    
    <!-- Text stuff -->
    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="36"/>
    </Style>
    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="30"/>
    </Style>
    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="24"/>
    </Style>
    <Style Selector="TextBlock.h4">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style Selector="TextBlock.h5">
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style Selector="TextBlock.bold">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Alignment -->
    <Style Selector=":is(Control).center">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style Selector=":is(Control).justify">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</Styles>