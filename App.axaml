<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Lyre.App"
             xmlns:local="using:Lyre"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    
    <!-- Would like to use nerd font version of this, sadly it doesn't work right now!-->
    <Application.Resources>
        <FontFamily x:Key="CodeNewRoman">Assets\Fonts\CodeNewRoman.otf#Code New Roman</FontFamily>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://Semi.Avalonia/Themes/Index.axaml"/>
        <StyleInclude Source="avares://Lyre/Styles/BaseStyles.axaml"/>
    </Application.Styles>
</Application>